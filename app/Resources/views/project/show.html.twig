{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">

                <div class="panel panel-default">
                    <div class="panel-body">

                        <div class="page-header">
                            <h1>{{ project.name }}</h1>
                        </div>
                        <table class="table">
                            <caption>Project Data</caption>
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ project.id }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Name</th>
                                    <td>{{ project.name }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Pages</th>
                                    <td>{{ project.pages }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>Selectors</th>
                                    <td>{{ project.selectors }}</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>CSS File</th>
                                    <td>
                                        {{ cssFileShort }}
                                    </td>
                                    <td>
                                        {% if cssFileShort is not null and cssFileShort is not empty %}
                                            <a href="/{{ project.id }}/crunch_css" class="btn btn-sm btn-primary 
                                            {% if project.selectors != (0) %}
                                                disabled
                                            {% endif %}
                                                ">Crunch</a>
                                            <a href="/{{ project.id }}/delete_css" class="btn btn-sm btn-danger">Delete</a>
                                        {% endif %}
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <hr>

                        <ul>
                            <li>Input a Url</li>
                            <li>Add a html file, tick box for "Perform a site wide scrape"</li>
                            <li>Run the redundancy checker</li>
                        </ul>

                        <hr>

                        {{ form_start(css_form) }}
                            {{ form_row(css_form.cssfile) }}
                            <input class="btn btn-primary" type="submit" value="Upload CSS File">
                        {{ form_end(css_form) }}

                        <hr>

                        <div class="row">
                            <div class="col-lg-6">

                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Url">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">Go!</button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        
                    </div>
                    <div class="panel-footer clearfix">
                        <ul class="nav nav-pills">
                            <li role="presentation"><a href="{{ path('project_index') }}">Back to the list</a></li>
                            <li class="pull-right">
                                {{ form_start(delete_form) }}
                                    <input class="btn btn-danger" type="submit" value="Delete Project">
                                {{ form_end(delete_form) }}
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
