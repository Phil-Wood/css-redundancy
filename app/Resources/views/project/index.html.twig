{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-sm-8 col-sm-offset-2">

                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="panel panel-default">
                            <div class="panel-body">

                                <div class="page-header">
                                    <h3>New Project</h3>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8 col-md-7 col-lg-6">
                                
                                {{ form_start(newForm) }}
                                    {{ form_label(newForm.name) }}
                                    {{ form_errors(newForm.name) }}
                                    <div class="input-group">
                                        {{ form_widget(newForm.name) }}
                                        <span class="input-group-btn">
                                            <input class="btn btn-primary" type="submit" value="Create" />
                                        </span>
                                    </div>

                                {{ form_end(newForm) }}

                            </div>
                        </div>

                        <div class="page-header">
                            <h3>Projects</h3>
                        </div>
   
                        <table class="table">
                            <caption>An overview of projects</caption>
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Pages</th>
                                    <th>Selectors</th>
                                    <th>CSS File</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td><a href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                                    <td>{{ project.name }}</td>
                                    <td>{{ project.pages }}</td>
                                    <td>{{ project.selectors }}</td>
                                    <td>{{ project.cssfile }}</td>
                                    <td>
                                        <a href="{{ path('project_show', { 'id': project.id }) }}" class="btn btn-default"><i class="fa fa-eye"></i></a>
                                        <a href="{{ path('project_edit', { 'id': project.id }) }}" class="btn btn-default"><i class="fa fa-pencil"></i></a>
                                        {{ form_start(deleteForms[project.id], { 'attr' : { 'class': 'form-inline' } }) }}
                                            <button class="btn btn-danger"><i class="fa fa-times"></i></button>
                                        {{ form_end(deleteForms[project.id]) }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
